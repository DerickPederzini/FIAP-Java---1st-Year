import java.util.Scanner;

public class testezin10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner e = new Scanner (System.in);
		
		double valorI, juros = 0, valorP;
		int parcelas = 1;
		
		
		System.out.println("Valor da dívida: ");
		valorI = e.nextDouble();
		
		valorP = valorI;
		
		System.out.println("TOTAL: "+valorI+" Juros: "+juros+" Parcelas: "+parcelas+""
				+ "Valor da parcela: "+valorP);
		
		juros = 10;
		
		for (int i = 1; i < 5; i++){
			
			parcelas+=2;
			
			valorI += (valorI) + valorI/juros;
		
			System.out.println("Total: "+valorI+"JUROS"
					+ "Parcelas"+parcelas+"Valor da parcela: "+valorI/parcelas);
			
			juros += 5;
			parcelas +=3;
		}
		
	}	

}
